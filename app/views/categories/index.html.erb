<h1>Categories</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Bakes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <% bakes_count = category.bakes.count %>
        <td><%= bakes_count %></td>
        <td><%= link_to 'Show', category %></td>
        <td><%= link_to 'Edit', edit_category_path(category) %></td>
        <td><%= bakes_count == 0 ? link_to('Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }) : "" %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<div class='py-4'>
  <%= button_to "New Category", new_category_path, method: :get, class: "btn btn-secondary shadow", form_class: "inline-button-to"  %>
  <%= button_to "Back", :admin, method: :get, class: 'btn btn-primary shadow' , form_class: "inline-button-to" %>
</div>