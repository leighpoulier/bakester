<% if bake.image.attached? %>
  <%= link_to bake do %>
    <%= image_tag bake.image, {class: 'img img-responsive img-rounded'} %>
  <% end %>
<% end %>
<h3><%= link_to bake.name, bake %></h3>
<% unless (controller_name == 'bakes' && action_name == 'my_bakes') || (controller_name == 'registrations' && action_name == 'show') %>
  <p><%= link_to bake.baker.full_name, bake.baker %></p>
<% end %>
<% unless controller_name == 'categories' && action_name == 'show' %>
  <p><%= link_to bake.category.name, bake.category %></p>
<% end %>
<p><%= bake.description %></p>
<p><%= number_to_currency(bake.unit_price_dollars) %> per <%= bake.unit %></p>
<p>Delivered in <%= bake.lead_time_days %> days</p>
<p><%= bake.view_count %> views</p>
<% if user_signed_in? %>
  <% unless  current_user.id == bake.baker.id %>
    <%= button_to "Add to Cart", :cart, {params: {bake_id: bake.id}} %>
  <% end %>
  <% if (bake.baker.id == current_user.id || current_user.admin ) %>
    <%= button_to "Edit", edit_bake_path(bake) ,method: :get %>
  <% end %>
<% end %>
