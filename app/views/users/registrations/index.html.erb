<h1>Users</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.full_name %></td>
        <td><%= link_to 'Profile', user %></td>
        <td><%= link_to 'Edit', edit_user_reg_path(user) %></td>
        <td><%= link_to 'Cart', users_cart_path(user)  %></td>
        <td><%= link_to 'Orders', users_bake_orders_path(user) %></td>
        <td><%= link_to 'Bake Jobs', users_bake_jobs_path(user) %></td>
        <td>
          <% unless user.bake_orders.any? || user.bakes.any? %>
            <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<div class='py-4'>
  <%= button_to "Back", :admin, method: :get, class: 'btn btn-primary shadow', form_class: "inline-button-to" %>
</div>