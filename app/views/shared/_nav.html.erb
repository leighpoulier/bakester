<% if user_signed_in? %>
  <p>Welcome <%= current_user.first_name %></p>
<% end %>
<ul>
  <li>
    <%= link_to "Home", :root %>
  </li>

  <% if user_signed_in? %>

    <li>
      <% if current_user.baker %>
          <%= link_to "My Bakes", :mybakes %>
      <% else %>
          <%= link_to "Become a Baker!", :upgrade_user %>
      <% end %>
    </li>
    <li>
      <%= link_to "My Account", :myaccount %>
    </li>
      <% if current_user.admin %>
        <li>
          <%= link_to "Admin", :admin %>
        </li>
      <% end %>
    <li>
      <%= link_to "Log Out", :logout %>
    </li>

  <% else #no user signed in %>

    <li>
      <%= link_to "Log In", :login  %>
    </li>
    <li>
      <%= link_to "Sign Up", :signup %>
    </li>

  <% end %>
</ul>