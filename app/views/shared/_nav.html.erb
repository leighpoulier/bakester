<ul>
  <li>
    <%= link_to "Home", :root %>
  </li>

  <% if user_signed_in? %>

      <li>
    <% if current_user.baker %>
        <%= link_to "New", :new_bake %>
    <% else %>
        <%= link_to "Become a Baker!", :edit_user_registration %>
    <% end %>
    </li>
    <li>
      <%= link_to "Log Out", :logout %>
    </li>

  <% else #no user signed in %>

    <li>
      <%= link_to "Log In", :login  %>
    </li>
    <li>
      <%= link_to "Sign Up", :signup %>
    </li>

  <% end %>
</ul>